{% extends '::base.html.twig' %}

{% block body -%}
    <table class="record_properties">
        <tbody>
            <tr>
                {% if entity.images.path is empty %}
                <td>Aucune image</td>
                {% else %}
                <td><img src="{{ asset(entity.images.AssetPath) }}" alt="{{ entity.images.name }}"></td>
                {% endif %}            </tr>
            <tr>
                <td>{{ entity.title }}</td>
            </tr>
            <tr>
                <td>{{ entity.description }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
          {% if is_granted('ROLE_ADMIN') %}
    <li>
        <a href="{{ path('post_edit', { 'id': entity.id }) }}">
            Editer
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
    {% endif %}
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
